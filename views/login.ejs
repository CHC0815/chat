    <link href="/css/login.css" rel="stylesheet">
    <script src="/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="wrapper">
        <div id="formContent">
            <!-- Login Form -->
            <form action="/users/authenticate" method="POST" style="margin-top: 15px;">
